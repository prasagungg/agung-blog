---
interface Props {
  title: string;
  desc: string;
  tech: string[];
  link: string;
}

const { title, desc, tech, link } = Astro.props;
---

<a href={link} class="group block relative no-underline">
  <div class="bg-[#0b1221] border border-slate-700/50 p-6 rounded-lg hover:border-cyan-400/50 transition-all duration-300 relative overflow-hidden shadow-lg group-hover:shadow-[0_0_30px_rgba(34,211,238,0.1)] group-hover:-translate-y-1">
      
      <div class="flex justify-between items-start mb-2 relative z-10">
          <h3 class="text-xl font-bold text-white group-hover:text-cyan-300 transition-colors uppercase italic">
              {title}
          </h3>
          <span class="text-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity transform -translate-x-2 group-hover:translate-x-0">â†—</span>
      </div>

      <p class="text-slate-400 mb-4 line-clamp-2 leading-relaxed relative z-10 text-sm">
        {desc}
      </p>
      
      <div class="flex gap-2 relative z-10 flex-wrap">
          {tech.map((t) => (
              <span class="text-[10px] uppercase font-bold px-2 py-1 bg-[#001E43] text-cyan-400 border border-cyan-900/50 rounded skew-x-6">
                  <span class="block skew-x-6">{t}</span>
              </span>
          ))}
      </div>

      <div class="absolute inset-0 bg-linear-to-r from-cyan-900/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity transform skew-x-12 origin-bottom-left"></div>
  </div>
</a>