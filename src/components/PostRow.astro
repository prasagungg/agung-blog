---
interface Props {
  title: string;
  date: string;
  link: string;
}

const { title, date, link } = Astro.props;
const [day, month] = date.split(' ');
---

<a href={link} class="block group no-underline">
  <div class="flex items-stretch bg-[#0b1221] border border-slate-800 hover:border-cyan-500 transition-all duration-300 rounded-lg overflow-hidden group-hover:translate-x-2">
      
      <div class="bg-[#001E43] text-cyan-400 w-20 flex flex-col items-center justify-center p-2 font-mono border-r border-slate-800 group-hover:bg-cyan-400 group-hover:text-black transition-colors relative overflow-hidden">
          <span class="text-2xl font-bold leading-none z-10">{day}</span>
          <span class="text-[10px] font-bold uppercase tracking-wider z-10">{month}</span>
          
          <div class="absolute inset-0 bg-white/20 transform -translate-x-full group-hover:translate-x-full transition-transform duration-500 skew-x-12"></div>
      </div>
      
      <div class="p-4 flex items-center grow relative">
          <h3 class="text-lg font-medium text-slate-200 group-hover:text-cyan-300 transition-colors line-clamp-2 z-10">
              {title}
          </h3>
          <div class="absolute right-0 top-0 bottom-0 w-1/3 bg-linear-to-l from-cyan-900/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
      </div>
  </div>
</a>